{
    "mcpServers": {
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ]
        },
        "postgres": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "postgresql://localhost/mydb"
            ]
        },
        "sentry": {
            "command": "uvx",
            "args": [
                "mcp-server-sentry",
                "--auth-token",
                "YOUR_SENTRY_TOKEN"
            ]
        }
    }
}
